<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".MainActivity_Chat">

    <RelativeLayout
        android:id="@+id/userChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="-5dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/userImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_account_circle_24">

            </ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameofuser"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/userImage"
            android:text="Name Display Here"
            android:textColor="#0b0b0b"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/emailofuser"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameofuser"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/userImage"
            android:text="Email Displays here"
            android:textColor="#6a6a6a"
            android:textSize="12sp">

        </TextView>

<!--        <ImageButton-->
<!--            android:id="@+id/chatButton"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginLeft="40dp"-->
<!--            android:layout_toRightOf="@id/nameofuser"-->
<!--            android:background="#009688"-->
<!--            android:src="@drawable/baseline_arrow_back_24">-->
<!--        </ImageButton>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/emailofuser"
            android:layout_marginTop="5dp"
            android:background="#E6E6E6" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-5dp"
            android:background="#a6a6a6"
            android:backgroundTint="#a6a6a6" />

    </RelativeLayout>


</RelativeLayout>